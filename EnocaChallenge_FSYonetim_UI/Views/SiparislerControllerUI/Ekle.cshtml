@model EnocaChallenge_FSYonetim_UI.Models.FSYonetim.SiparislerEkleModals
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-sm mb-2 mb-sm-0">

                <h1 class="page-header-title">Sipariş Ekle</h1>

            </div>

            <!-- End Col -->
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>


    <div class="row justify-content-lg-center">
        <div class="card card-lg mb-5">
            <div class="card-body">
                <form method="post">
                    
                    <div class="mb-3">
                        <label class="form-label" for="firmaDropdown">Firma:</label>
                        <select asp-for="siparismodel.FirmaId" class="form-control" id="firmaDropdown">
                            <option value="">Seçiniz</option>
                            @foreach (var firma in Model.firmamodalslist)
                            {
                                <option value="@firma.Id">@firma.Adi</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="firmaDropdown">Ürün:</label>
                        <select asp-for="siparismodel.UrunId" class="form-control" id="firmaDropdown">
                            <option value="">Seçiniz</option>
                            @foreach (var urun in Model.urunmodalslist)
                            {
                                <option value="@urun.Id">@urun.Adi</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
        <!-- End Card -->
    </div>


</div>




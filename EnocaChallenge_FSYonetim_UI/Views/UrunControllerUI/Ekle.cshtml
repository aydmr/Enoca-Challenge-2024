@model EnocaChallenge_FSYonetim_UI.Models.FSYonetim.UrunEkleModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-sm mb-2 mb-sm-0">

                <h1 class="page-header-title">Ürün Ekle</h1>

            </div>

            <!-- End Col -->
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>


    <div class="row justify-content-lg-center">
        <div class="card card-lg mb-5">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="firmaadi">Ürün Adı</label>
                        <input type="text" asp-for="UrunModals.Adi" id="firmaadi" class="form-control" placeholder="Klavye">
                    </div>

                  <div class="mb-3">
                  <label class="form-label" for="firmaDropdown">Firma:</label>
                     <select asp-for="UrunModals.FirmaId" class="form-control" id="firmaDropdown">
                     <option value="">Seçiniz</option>
                     @foreach (var firma in Model.firmamodelslist)
                        {
                            <option value="@firma.Id">@firma.Adi</option>
                        }
                    </select>
                    </div>
                     <div class="mb-3">
                        <label class="form-label" for="stok">Stok Adeti:</label>
                        <input type="number" asp-for="UrunModals.Stok" class="form-control" id="stok">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="saatSecBslngc">Fiyatı:</label>
                        <input type="number" asp-for="UrunModals.Fiyat" class="form-control" id="saatSecBslngc">
                    </div>

                    
                    <button class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
        <!-- End Card -->
    </div>


</div>


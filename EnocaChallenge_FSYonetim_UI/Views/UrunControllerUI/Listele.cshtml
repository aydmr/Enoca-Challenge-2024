@model List<EnocaChallenge_FSYonetim_UI.Models.FSYonetim.UrunModals>

@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-sm mb-2 mb-sm-0">

                <h1 class="page-header-title">Ürünler</h1>

                <!-- Card -->
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2">Toplam Ürün Sayısı</h6>

                        <div class="row align-items-center gx-2">
                            <div class="col">
                                <span class="js-counter display-4 text-dark" data-value="@Model.Count">@Model.Count</span>
                            </div>
                            <!-- End Col -->

                            
                            <!-- End Col -->
                        </div>
                        <!-- End Row -->
                    </div>
                </div>
                <!-- End Card -->
            </div>

            <!-- End Col -->
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>

    <div class="card">

        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firma Adı</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Stok</th>
                    <th scope="col">Onay Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">#</th>
                        <td>@item.Adi</td>
                        <td>@item.Fiyat ₺</td>
                        <td>@item.Stok</td>
                        <td>@item.Adi</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table -->

    </div>
    <!-- End Card -->
</div>

@model EnocaChallenge_FSYonetim_UI.Models.FSYonetim.FirmaModals
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-sm mb-2 mb-sm-0">

                <h1 class="page-header-title">Firma Güncelle</h1>

            </div>

            <!-- End Col -->
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>


    <div class="row justify-content-lg-center">
        <div class="card card-lg mb-5">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="firmaadi">Firma Adı</label>
                        <input type="text" asp-for="Adi" id="firmaadi" class="form-control" placeholder="Yılmazlar AŞ">
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="saatSecBslngc">Saat Seçimi:</label>
                        <input type="time" asp-for="SiparisIzinBaslangicSaati" class="form-control" id="saatSecBslngc">
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="saatSecBts">Saat Seçimi:</label>
                        <input type="time" asp-for="SiparisIzinBitisSaati" class="form-control" id="saatSecBts">
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="OnayDurumu" class="form-check-input" type="checkbox" id="onayCheckbox">
                        <label class="form-check-label" for="onayCheckbox">Onay Durumu</label>
                    </div>

                    <button class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
        <!-- End Card -->
    </div>


</div>


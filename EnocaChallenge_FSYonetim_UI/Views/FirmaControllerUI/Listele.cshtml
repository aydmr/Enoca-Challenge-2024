@model List<EnocaChallenge_FSYonetim_UI.Models.FSYonetim.FirmaModals>

@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-sm mb-2 mb-sm-0">
               
                <h1 class="page-header-title">Firmalar</h1>

                <!-- Card -->
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2">Toplam Firma Sayısı</h6>

                        <div class="row align-items-center gx-2">
                            <div class="col">
                                <span class="js-counter display-4 text-dark" data-value="@Model.Count">@Model.Count</span>
                            </div>
                            <!-- End Col -->

                            <div class="col-auto">
                                <span class="badge bg-soft-success text-success p-1">
                                    <i class="bi-graph-up"></i> 5.0%
                                </span>
                            </div>
                            <!-- End Col -->
                        </div>
                        <!-- End Row -->
                    </div>
                </div>
                <!-- End Card -->
            </div>

            <!-- End Col -->

            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>

    <div class="card">
        
        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firma Adı</th>
                    <th scope="col">Sipariş İzin Başlangıç Saati</th>
                    <th scope="col">Sipariş İzin Bitiş Saati</th>
                    <th scope="col">Onay Durumu</th>
                    <th scope="col">Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">#</th>
                        <td>@item.Adi</td>
                        <td>@item.SiparisIzinBaslangicSaati</td>
                        <td>@item.SiparisIzinBitisSaati</td>
                        <td>@item.OnayDurumu</td>
                        <td><a href="/FirmaControllerUI/Guncelle/@item.Id"><button class="btn btn-primary">Güncelle</button></a></td>
                    </tr>
                }             
            </tbody>
        </table>
        <!-- End Table -->

    </div>
    <!-- End Card -->
</div>
